<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="商品（1）"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/textSize_16sp" />

    <!-- 中文品名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_nameCn"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_nameCn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

    <!-- 包装件数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_quantity"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>


    <!-- 包装单位 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_packingUnitEn"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_packingUnitEn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

    <!-- 毛重(KG) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_grossWeight"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_grossWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

    <!-- 体积(CBM) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_vol"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_vol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

    <!-- 净重(KG) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shippingDetailList_netWeight"
            android:textColor="#747474"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:id="@+id/tv_shippingDetailList_netWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

</LinearLayout>
