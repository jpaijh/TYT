<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MyCardView"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine_item_background"
        android:clickable="true"
        android:orientation="vertical">

        <!-- 品名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/orderCommodityName"
                android:textColor="#555555"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_orderCommodityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#eeeeee" />

        <!-- 单位 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityUnit"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

        <!-- 数量 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityQuantity"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

        <!-- 单价 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityPriceWov"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityPriceWov"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

        <!-- 不含税金额 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityAmountWov"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityAmountWov"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

        <!-- 税率 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityRebateRate"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityRebateRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

        <!-- 税额 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/orderCommodityVatAmount"
                android:textColor="#747474"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/tv_orderCommodityVatAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>